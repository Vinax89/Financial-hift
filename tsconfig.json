{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "lib":  [
                                        "ES2020",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "jsx":  "react-jsx",
                            "module":  "ESNext",
                            "moduleResolution":  "bundler",
                            "resolveJsonModule":  true,
                            "allowSyntheticDefaultImports":  true,
                            "esModuleInterop":  true,
                            "isolatedModules":  true,
                            "skipLibCheck":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "strict":  true,
                            "noImplicitAny":  true,
                            "strictNullChecks":  true,
                            "strictFunctionTypes":  true,
                            "strictBindCallApply":  true,
                            "strictPropertyInitialization":  true,
                            "noImplicitThis":  true,
                            "alwaysStrict":  true,
                            "allowJs":  true,
                            "checkJs":  false,
                            "noEmit":  true,
                            "noUnusedLocals":  false,
                            "noUnusedParameters":  false,
                            "noFallthroughCasesInSwitch":  true,
                            "baseUrl":  ".",
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ]
                                      }
                        },
    "include":  [
                    "**/*.ts",
                    "**/*.tsx"
                ],
    "exclude":  [
                    "node_modules",
                    "dist",
                    "build",
                    ".vite",
                    "vite.config.ts",
                    "eslint.config.js",
                    "postcss.config.js",
                    "tailwind.config.js",
                    "vitest.config.js",
                    "vitest.setup.js"
                ]
}
